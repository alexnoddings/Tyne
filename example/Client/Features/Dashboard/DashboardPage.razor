@page "/"

<TynePageTitle Value="Dashboard" />

<MudContainer MaxWidth="MaxWidth.Large" Class="pt-6">
    <MudText Typo="Typo.h1" Align="Align.Center">
        Tyne Aerospace
    </MudText>
    <MudGrid>
        <MudItem Class="d-none d-sm-block" xs="0" sm="1" md="2" />
        <MudItem xs="12" sm="10" md="8">
            <MudPaper>
                <MudAlert Variant="Variant.Outlined" Severity="Severity.Info" NoIcon="true">
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        This is an example app designed to demonstrate <MudLink Typo="Typo.inherit" Color="Color.Inherit" Href="https://github.com/alexnoddings/Tyne">Tyne</MudLink> libraries.
                    </MudText>
                    <MudText Typo="Typo.body1">
                        It is loosely themed around a management system for a fictional aerospace company, Tyne Aerospace.
                        <br class="d-none d-lg-block"/>
                        All data is scoped to this app instance. It will be lost when closed, and re-generated next time it is opened.
                    </MudText>
                </MudAlert>
            </MudPaper>
        </MudItem>
        <MudItem Class="d-none d-sm-block" xs="0" sm="1" md="2" />
        <MudItem xs="12" sm="6" md="3">
            <NextLaunchCard />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-0 pb-1 pr-1 mud-theme-success" Style="height: 100%;">
                <MudPaper Elevation="0" Class="d-flex flex-row align-center pa-4" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Payments" Color="Color.Success" Class="mr-4" Style="width:54px; height:54px;"></MudIcon>
                    <div>
                        <MudText Typo="Typo.subtitle1" Class="mb-n1">Annual revenue</MudText>
                        <MudText Typo="Typo.h5">£101m</MudText>
                    </div>
                </MudPaper>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <ConstellationCard />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-0 pb-1 pr-1 mud-theme-info" Style="height: 100%;">
                <MudPaper Elevation="0" Class="d-flex flex-row align-center pa-4" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.NightsStay" Color="Color.Info" Class="mr-4" Style="width:54px; height:54px;"></MudIcon>
                    <div>
                        <MudText Typo="Typo.subtitle1" Class="mb-n1">Lunar surface</MudText>
                        <MudText Typo="Typo.h5">Silver and white</MudText>
                    </div>
                </MudPaper>
            </MudPaper>
        </MudItem>
        <MudItem Class="d-none d-md-block" xs="0" sm="1" md="3" />
        <MudItem xs="12" sm="6" md="3">
            <PartTypesCountCard />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <PartsCountCard />
        </MudItem>
    </MudGrid>
</MudContainer>
