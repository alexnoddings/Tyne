@page "/"

<TynePageTitle Value="Dashboard" />

<MudContainer MaxWidth="MaxWidth.Small" Class="pt-6">
    <MudText Typo="Typo.h1" Align="Align.Center">
        Tyne Aerospace
    </MudText>
    <MudPaper>
        <MudAlert Variant="Variant.Outlined" Severity="Severity.Info" NoIcon="true">
            <MudText Typo="Typo.h5" Align="Align.Center">
                This is an example app to demonstrate Tyne libraries.
            </MudText>
            <MudText Typo="Typo.body1">
                It is themed around a system for Tyne Aerospace, a fictional company.
            </MudText>
        </MudAlert>
    </MudPaper>
    <MudGrid Class="mt-4">
        <DashboardCardLink Href="./components" Title="Component examples" Icon="@Icons.Material.Outlined.Category" />
        <DashboardCardLink Href="./systems" Title="System examples" Icon="@Icons.Material.Outlined.AccountTree" />
        <MudItem xs="12" />
        <ConstellationCard />
        <NextLaunchCard />
        <GatewayUplinkCard />
        <LunarSurfaceCard />
    </MudGrid>
</MudContainer>
