@using System.Reflection
@inherits DocLayoutBase

@((RenderFragment)base.BuildRenderTree)

@code
{
    protected override string PageTitle =>
        RouteData
        .PageType
        .GetCustomAttribute<SystemTitleAttribute>()
        ?.Title
        ?? string.Empty;

    protected override RenderFragment RenderBreadcrumbs() =>
        @<SystemsBreadcrumbs PageName="@PageTitle" />;
}
