<div class="d-flex flex-column gap-1 my-7">
    @if (Title is not null)
    {
        <MudText Typo="Typo.h5">
            @Title
        </MudText>
    }
    @ChildContent
</div>

@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; } = _ => { };

    [Parameter]
    public RenderFragment? Title { get; set; }
}
