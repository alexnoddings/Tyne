    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    <PackageReference Include="MudBlazor" />
    <!-- Temporarily disabled, see #27 -->
    <!-- <PackageReference Include="System.Runtime.Experimental" /> -->
