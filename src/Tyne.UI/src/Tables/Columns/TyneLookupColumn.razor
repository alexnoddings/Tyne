@namespace Tyne.UI.Tables
@typeparam TResult
@typeparam TSearch
@typeparam TLookup
@typeparam TLookupKey
@inherits TyneFilteredColumn<TResult, TSearch>

@Render(
	@<MudAutocomplete T="TLookup"
					  @ref="InputRef"
				      Class="my-0"
				      Value="Value!"
				      ValueChanged="SetValueAsync"
					  ResetValueOnEmptyText="true"
				      SearchFunc="LookupFunc"
				      DebounceInterval="750"
				      Variant="Variant.Text"
				      Margin="Margin.Dense"
				      ToStringFunc="LookupToString"
				      ItemTemplate="ItemTemplate ?? DefaultItemTemplate()"
				      ItemSelectedTemplate="ItemSelectedTemplate ?? ItemTemplate ?? DefaultItemTemplate()" />
)

@code {
	private RenderFragment<TLookup> DefaultItemTemplate() =>
		item => @<text>@LookupToString(item)</text>;
}