@namespace Tyne.Blazor
@typeparam TRequest
@typeparam TResponse
@inherits TyneFilteredColumnBase<TRequest, TResponse>

<TyneColumnHeaderContent TRequest="TRequest" TResponse="TResponse" Column="this">
    <Header>
        @ChildContent
    </Header>
    <Filter>
        <MudDateRangePicker PickerVariant="PickerVariant.Dialog"
                            Class="my-0"
                            DateRange="Value"
                            DateRangeChanged="newValue => SetValueAsync(newValue, false)"
                            Margin="Margin.Dense"
                            Style="max-width: 280px;"/>
    </Filter>
</TyneColumnHeaderContent>
