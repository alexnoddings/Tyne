@namespace Tyne.Blazor
@typeparam TRequest
@typeparam TResponse
@inherits TyneFilteredColumnBase<TRequest, TResponse, string>

<TyneColumnHeaderContent TRequest="TRequest" TResponse="TResponse" Column="this">
    <Header>
        @ChildContent
    </Header>
    <Filter>
        <MudTextField T="string"
				      @ref="InputRef"
				      Class="my-0 mt-n3"
				      Value="Value"
                      ValueChanged="newValue => SetValueAsync(newValue, false)"
				      DebounceInterval="800"
				      Variant="Variant.Text"
				      Margin="Margin.Dense" />
    </Filter>
</TyneColumnHeaderContent>
