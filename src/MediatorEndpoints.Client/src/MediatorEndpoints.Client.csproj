<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Tyne.MediatorEndpoints.Client</AssemblyName>
        <RootNamespace>Tyne.MediatorEndpoints</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Label="Project Info">
        <Description>Client implementation of Tyne's mediator endpoints.</Description>
        <PackageTags>$(PackageTags)</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Options"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(SrcRoot)\HttpMediator.Client\src\HttpMediator.Client.csproj"/>
        <ProjectReference Include="$(SrcRoot)\MediatorEndpoints.Core\src\MediatorEndpoints.Core.csproj"/>
    </ItemGroup>

    <PropertyGroup Label="Warnings and errors">
        <!--
          CS1591: Missing XML comment for publicly visible type or member.
          REASON: This library is not yet fully documented.
        -->
        <NoWarn>$(NoWarn);CS1591</NoWarn>
    </PropertyGroup>

    <Import Project="$(EngRoot)\Packages.props"/>

</Project>
